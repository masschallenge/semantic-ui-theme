/*******************************
         Modal Overrides
*******************************/

.ui.mini.modal > .unpadded.content {
  padding: 0;
}

.ui.modal > .segment > .close.icon {
  cursor: pointer;
  position: absolute;
  right: 0;
  font-size: 1em;
  top: 0;
  margin: .75rem;
  height: auto;
}

.ui.modal > .teal.segment {
  background-color: #b8dde4 !important;
}

.ui.modal.rbcCalendar {
  margin-top: 4rem;
  max-width: 368px;
  min-width: 320px;
}

.ui.modal.rbcCalendar .scrolling.content {
  max-height: calc(85vh - 326px);
}

.ui.modal > .header > .close {
  position: absolute;
  right: 10px;
}

.ui.mini.round.button {
  border-radius: 50%;
  padding: .75em;
  height: 28px;
  width: 28px;
}

.ui.mini.default.round.button:not(:hover) {
  background-color: initial;
}

.ui.modal > .header .rbc-calendar {
  margin: 0 -.5em;
}

.ui.tiny.modal.cancel-reservation-modal {
  font-family: @googleFontName;
  font-weight: 600;
  width: 450px;
}

.ui.header .content.modal-header {
  font-weight: 700;
  font-size: 18px;
  line-height: 25px;
  color: @textColor;
}

.ui.header .sub.header.modal-subheader {
  font-size: 14px;
  line-height: 19px;
  color: @textColor;
}

.ui.header .content.list-title {
  font-size: 12px;
  color: @textColor;
}

.ui.header .sub.header.list-content {
  font-size: 10px;
  line-height: 14px;
  display: flex;
  align-items: center;
  color: @listContentColor;
}

.ui.modal > .content > .modal-textarea {
  font-size: 13px;
  line-height: 18px;
  color: @textColor;
  display: flex;
  flex-direction: row;
  padding: 8px 14px;

  background: @textareaBackground;
  border: @border;
  box-sizing: border-box;
  border-radius: @textareaBorderRadius;
}

.ui.modal > .content > .modal-textarea textarea::placeholder {
  color: @textareaColor;
  flex: none;
  order: 0;
  align-self: center;
  margin: 10px 0;
}

.ui.modal > .actions.reservation-actions {
  display: flex;
  justify-content: space-between;
}
